@model IEnumerable<E_Ticaret.Models.Entities.AnaSayfaSlider>

@{
    ViewData["Title"] = "AnaSayfa Slider";
}


<p>
    <a asp-action="Create" class="btn btn-outline-primary"> <i class="fa-solid fa-plus"></i>Yeni Oluştur</a>
</p>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Baslik)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Resim)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Link)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AktifMi)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.Baslik)
            </td>

            <td>
                    <img src="/Fotolar/@item.Resim" alt="" height="28" />
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Link)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AktifMi)
            </td>
            <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square"></i></a> |
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-magnifying-glass"></i></a> |
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
