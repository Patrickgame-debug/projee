@model E_Ticaret.Models.Entities.Marka

@{
    ViewData["Title"] = "Marka Düzenle";
}


<hr />
<div class="row">
    <div class="col-md-4" enctype="multipart/form-data">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="KayitTarihi" />
            <input type="hidden" asp-for="GuncellemeTarihi" />
            <div class="form-group">
                <label asp-for="MarkaAdi" class="control-label"></label>
                <input asp-for="MarkaAdi" class="form-control" />
                <span asp-validation-for="MarkaAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aciklama" class="control-label"></label>
                <textarea asp-for="Aciklama" class="form-control"></textarea>
                <span asp-validation-for="Aciklama" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resim" class="control-label"></label>
                <input asp-for="Resim" class="form-control" type="file" />
                <span asp-validation-for="Resim" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="AktifMi" /> @Html.DisplayNameFor(model => model.AktifMi)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="SiparisNo" class="control-label"></label>
                <input asp-for="SiparisNo" class="form-control" />
                <span asp-validation-for="SiparisNo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Geri Dön</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}