@model IEnumerable<E_Ticaret.Models.Entities.Adress>

@{
    ViewData["Title"] = "Adresler";
}




<p>
    <a asp-action="Create" class="btn btn-outline-primary"><i class="fa-solid fa-plus"></i>Yeni Ekle</a>
</p>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AdresBasligi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sehir)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ilce)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AcikAdres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FaturaAdres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeslimatAdres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AktifMi)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Kullanici)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AdresBasligi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sehir)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ilce)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AcikAdres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FaturaAdres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeslimatAdres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AktifMi)
            </td>
           
            <td>
                    @Html.DisplayFor(modelItem => item.Kullanici.Email)
            </td>
            <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id"> <i class="fa-solid fa-pen-to-square"></i></a> |
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-magnifying-glass"></i></a> |
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
