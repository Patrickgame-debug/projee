@using E_Ticaret.Models.Entities
@model AnaSayfaModeli


@{

    ViewData["Title"] = "Ana Sayfa";
}


<partial name="AnaSayfaSlider" model="Model.Sliders" />





@if (Model.Urunler is not null && Model.Urunler.Count > 0)
{
    <div class="my-5">
        <h1 class="text-center">Sana Özel Ürünlerimiz</h1>
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var item in Model.Urunler)
            {
                <partial name="UrunlerView" model="item" />
            }
        </div>
    </div>
}



@if (Model.Kampanyalar is not null && Model.Kampanyalar.Count > 0)
{
    <div class="my-5">
        <h1 class="text-center ">Kampanyalarımız</h1>
        <div class="row gx-4 gx-lg-5 row-cols-2 justify-content-center">
            @foreach (var item in Model.Kampanyalar)
            {
                <partial name="KampanyalarView" model="item" />
            }
        </div>
    </div>
}

