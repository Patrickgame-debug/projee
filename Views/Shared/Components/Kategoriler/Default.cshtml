@model IEnumerable<E_Ticaret.Models.Entities.Kategori>
@{
    foreach (var item in Model.Where(i => i.AktifMi && i.UstMenudeGozuksunMu && i.UstKategoriId==0))
    {
        <div class="dropdown">
            <a class="btn dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                @item.KategoriAdi
            </a>

            <ul class="dropdown-menu">
                @foreach (var subItem in Model.Where(i => i.AktifMi && i.UstMenudeGozuksunMu && i.UstKategoriId == item.Id))
                {
                    <li><a class="dropdown-item" href="/Kategoriler/Index/@subItem.Id">@subItem.KategoriAdi</a></li>
                }
                
            </ul>
        </div>

        


    }
}
    