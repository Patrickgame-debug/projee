@model E_Ticaret.Models.Entities.Kampanya

@{
    ViewData["Title"] = "Kategori ve Kampanya Ekle";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="KampanyaAdi" class="control-label"></label>
                <input asp-for="KampanyaAdi" class="form-control" />
                <span asp-validation-for="KampanyaAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aciklama" class="control-label"></label>
                <textarea asp-for="Aciklama" class="form-control"></textarea>
                <span asp-validation-for="Aciklama" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resim" class="control-label"></label>
                <input asp-for="Resim" class="form-control" type="file" />
                <span asp-validation-for="Resim" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="AktifMi" /> @Html.DisplayNameFor(model => model.AktifMi)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="SiparisNo" class="control-label"></label>
                <input asp-for="SiparisNo" class="form-control" />
                <span asp-validation-for="SiparisNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BaslangicTarihi" class="control-label"></label>
                <input asp-for="BaslangicTarihi" class="form-control" type="date" />
                <span asp-validation-for="BaslangicTarihi" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="BitisTarihi" class="control-label"></label>
                <input asp-for="BitisTarihi" class="form-control" type="date" />
                <span asp-validation-for="BitisTarihi" class="text-danger"></span>
            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Geriye Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
