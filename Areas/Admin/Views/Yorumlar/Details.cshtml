@model E_Ticaret.Models.Entities.Yorum

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Yorum</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SiparisDetay)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SiparisDetay.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Kullanici)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Kullanici.Adi)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Puan)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Puan)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.YorumMetni)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.YorumMetni)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tarih)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tarih)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Urun)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Urun.UrunAdi)
        </dd>
        <dt class="col-sm-2">
            Kullanıcı Durumu
        </dt>
        <dd class="col-sm-10">
            @if (Model.Kullanici?.HesapEngelliMi == true)
            {
                <span style="color: red;">❌ Engellenmiş</span>
            }
            else
            {
                <span style="color: green;">✅ Aktif</span>
            }
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Düzenle</a> |
    <a asp-action="Index">Geri Dön</a>
</div>
